.testimonial
    &__heading, &__text, &__author
        color: $theme-green
    &__heading
        margin-top: 0
        margin-bottom: 0.5rem
    &__quote
        display: flex
        flex-direction: column
        align-items: flex-end
        margin 0
    &__text
        font-family: Barlow
        align-self: flex-start
        margin: 0
        font-style: italic
    &__author
        font-style: normal
        font-size: 0.875rem
    &__date
        font-size: 0.8125rem
        font-weight: 700
        letter-spacing: 0.04em
        color: $theme-red